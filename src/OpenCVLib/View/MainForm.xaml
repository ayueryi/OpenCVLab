<Window
    x:Class="OpenCVLab.View.MainForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenCVLab.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://Yu-UI.com//2024/xaml"
    Title="OPENCV实验大师"
    Width="1800"
    Height="1000"
    d:DataContext="{d:DesignInstance local:MainForm,
                                     IsDesignTimeCreatable=False}"
    AllowsTransparency="True"
    Background="White"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border BorderThickness="1" CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Title Bar: Clean & Minimal  -->
            <Grid
                x:Name="TitlePanel"
                Grid.Row="0"
                Height="48"
                HorizontalAlignment="Stretch"
                Background="Transparent"
                MouseDown="TitlePanel_MouseDown">

                <StackPanel
                    Margin="24,0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <Image
                        Width="24"
                        Height="24"
                        Margin="0,0,12,0"
                        VerticalAlignment="Center"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="pack://application:,,,/OpenCVLab;component/Resources/logo.png" />
                    <TextBlock
                        x:Name="SwName"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="图像处理实验大师" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,12,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

                    <Button Margin="4" Click="Sw_Minus_Click">
                        <ui:Icon Kind="Minus" />
                    </Button>

                    <Button Margin="4" Click="Sw_Maxus_Click">
                        <ui:Icon Kind="Maximize" />
                    </Button>

                    <Button Margin="4" Click="Sw_Closeus_Click">
                        <ui:Icon Kind="Close" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  Main Content Area  -->
            <Grid Grid.Row="1" Margin="12,0,12,12">
                <ContentControl Content="{Binding ViewModel.BasicPage}" />

                <ui:ContentDialogHost
                    x:Name="RootDialog"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Panel.ZIndex="500"
                    CloseOnClickAway="False"
                    HostName="RootDialog" />

                <ui:ToastHost
                    Margin="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Panel.ZIndex="999"
                    HostName="Global" />
            </Grid>
        </Grid>
    </Border>
</Window>
