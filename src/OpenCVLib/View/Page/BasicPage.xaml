<UserControl
    x:Class="OpenCVLab.View.Page.BasicPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:OpenCVLab.View.Page"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://Yu-UI.com//2024/xaml"
    d:DataContext="{d:DesignInstance local:BasicPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="1000"
    d:DesignWidth="1800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Margin="3,0,3,0"
            Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource BorderRegion}">
            <Menu>
                <MenuItem Header="文件操作">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Image"/>
                    </MenuItem.Icon>

                    <MenuItem Command="{Binding ViewModel.OpenImageCommand}"
                              Header="打开图像">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="OpenInBrowser"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Command="{Binding ViewModel.SaveImageCommand}"
                              Header="保存图像">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="DropSaver"/>
                        </MenuItem.Icon>
                    </MenuItem>

                    <MenuItem Command="{Binding ViewModel.ShowImageCommand}"
                              Header="显示图像(CV2)">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ShowOutline"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="基础操作">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="User"/>
                    </MenuItem.Icon>

                    <MenuItem Header="色彩空间">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Color"/>
                        </MenuItem.Icon>

                        <MenuItem Command="{Binding ViewModel.ConvertColorCommand}"
                                  Header="颜色空间转换"/>
                    </MenuItem>

                    <MenuItem Header="平滑图像(Blur)">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ImageFilterBlackWhite"/>
                        </MenuItem.Icon>

                        <MenuItem Command="{Binding ViewModel.NormalizedBlockFilterCommand}"
                                  Header="归一化滤波"/>
                        <MenuItem Command="{Binding ViewModel.GaussianFilterCommand}"
                                  Header="高斯滤波"/>
                        <MenuItem Command="{Binding ViewModel.MedianFilterCommand}"
                                  Header="中值滤波"/>
                        <MenuItem Command="{Binding ViewModel.BilateralFilterCommand}"
                                  Header="双边滤波"/>
                    </MenuItem>

                    <MenuItem Header="形态学">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Blur"/>
                        </MenuItem.Icon>

                        <MenuItem Command="{Binding ViewModel.DilateCommand}"
                                  Header="膨胀">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Dilation.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.ErodeCommand}"
                                  Header="腐蚀">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Erosion.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.MorphologyExOpenCommand}"
                                  Header="开运算">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Opening.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.MorphologyExCloseCommand}"
                                  Header="闭运算">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Closing.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.MorphologyExGradientCommand}"
                                  Header="形态学梯度">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Gradient.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.MorphologyExTopHatCommand}"
                                  Header="顶帽">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Tophat.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.MorphologyExBlackHatCommand}"
                                  Header="黑帽">
                            <MenuItem.ToolTip>
                                <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/MorphologyEx/Morphology_2_Tutorial_Theory_Blackhat.png"/>
                            </MenuItem.ToolTip>
                        </MenuItem>
                    </MenuItem>

                    <MenuItem Header="阈值处理">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="ImageArea"/>
                        </MenuItem.Icon>

                        <MenuItem
                            Command="{Binding ViewModel.ThresholdCommand}"
                            CommandParameter="Binary"
                            Header="标准二值化">
                            <MenuItem.ToolTip>
                                <StackPanel>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Base_Figure.png"/>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Binary.png"/>
                                </StackPanel>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem
                            Command="{Binding ViewModel.ThresholdCommand}"
                            CommandParameter="BinaryInv"
                            Header="反转二值化">
                            <MenuItem.ToolTip>
                                <StackPanel>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Base_Figure.png"/>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Binary_Inverted.png"/>
                                </StackPanel>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem
                            Command="{Binding ViewModel.ThresholdCommand}"
                            CommandParameter="Trunc"
                            Header="截断二值化">
                            <MenuItem.ToolTip>
                                <StackPanel>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Base_Figure.png"/>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Truncate.png"/>
                                </StackPanel>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem
                            Command="{Binding ViewModel.ThresholdCommand}"
                            CommandParameter="Tozero"
                            Header="阈值至零">
                            <MenuItem.ToolTip>
                                <StackPanel>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Base_Figure.png"/>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Zero.png"/>
                                </StackPanel>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem
                            Command="{Binding ViewModel.ThresholdCommand}"
                            CommandParameter="TozeroInv"
                            Header="阈值至零反转">
                            <MenuItem.ToolTip>
                                <StackPanel>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Base_Figure.png"/>
                                    <Image Source="pack://application:,,,/OpenCVLab;component/Resources/Tips/Threshold/Threshold_Tutorial_Theory_Zero_Inverted.png"/>
                                </StackPanel>
                            </MenuItem.ToolTip>
                        </MenuItem>

                        <MenuItem Command="{Binding ViewModel.OtsuThresholdCommand}"
                                  Header="OTSU阈值方法"/>

                        <MenuItem Command="{Binding ViewModel.AdaptiveThresholdCommand}"
                                  Header="自适应阈值方法"/>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="直方图">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Analytics"/>
                    </MenuItem.Icon>

                    <MenuItem Command="{Binding ViewModel.DrawHistCommand}"
                              Header="绘制直方图"/>
                    <MenuItem Command="{Binding ViewModel.Draw2dHistCommand}"
                              Header="绘制2D直方图"/>
                    <MenuItem Command="{Binding ViewModel.EqualizeHistCommand}"
                              Header="直方图均衡化"/>
                    <MenuItem Command="{Binding ViewModel.CreateCLAHECommand}"
                              Header="自适应直方图均衡化"/>
                    <MenuItem Command="{Binding ViewModel.LinearGrayTransformCommand}"
                              Header="灰度线性变换"/>
                    <MenuItem Command="{Binding ViewModel.PiecewiseLinearGrayTransformCommand}"
                              Header="分段线性灰度变换"/>
                </MenuItem>

                <MenuItem Header="边缘检测">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Blur"/>
                    </MenuItem.Icon>

                    <MenuItem Command="{Binding ViewModel.CannyCommand}"
                              Header="Canny边缘检测"/>
                    <MenuItem Command="{Binding ViewModel.SobelCommand}"
                              Header="Sobel 算子"/>
                    <MenuItem Command="{Binding ViewModel.ScharrCommand}"
                              Header="Scharr 算子"/>
                    <MenuItem Command="{Binding ViewModel.LaplacianCommand}"
                              Header="Laplacian 算子"/>
                </MenuItem>

                <MenuItem Header="轮廓检测">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="ContactlessPaymentCircle"/>
                    </MenuItem.Icon>

                    <MenuItem Command="{Binding ViewModel.FindContoursCommand}"
                              Header="检测轮廓"/>
                    <MenuItem Command="{Binding ViewModel.DrawBoundingRectCommand}"
                              Header="绘制外接轮廓"/>
                </MenuItem>
            </Menu>
        </Border>

        <Border
            Grid.Row="1"
            Margin="3,2,3,3"
            Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource BorderRegion}">
            <Grid>
                <ui:ImagePreviewControl x:Name="uiImagePreviewControl"
                                        ImageSource="{Binding ViewModel.SelectOperation.BitmapSource, Mode=OneWay}"/>

                <Canvas
                    x:Name="uiImageCanvasControl"
                    Width="{Binding ElementName=uiImagePreviewControl, Path=ActualWidth}"
                    Height="{Binding ElementName=uiImagePreviewControl, Path=ActualHeight}"/>

                <Expander
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    ExpandDirection="Up"
                    Header="图像属性"
                    IsEnabled="True">
                    <Border
                        Padding="4"
                        Effect="{StaticResource EffectShadow3}"
                        Style="{StaticResource BorderRegion}">
                        <StackPanel>
                            <StackPanel Margin="2"
                                        Orientation="Horizontal">
                                <TextBlock Text="图像通道"/>
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="{Binding ViewModel.SelectOperation.Channels}"/>
                            </StackPanel>

                            <StackPanel Margin="2"
                                        Orientation="Horizontal">
                                <TextBlock Text="图像维度"/>
                                <TextBlock
                                    Margin="4,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="{Binding ViewModel.SelectOperation.ImageMat.Dims}"/>
                            </StackPanel>

                            <StackPanel Margin="2"
                                        Orientation="Horizontal">
                                <TextBlock Text="图像大小"/>
                                <TextBlock
                                    Margin="1,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="{Binding ViewModel.SelectOperation.ImageMat.Cols}"/>
                                <TextBlock Margin="1,0"
                                           VerticalAlignment="Center">
                                    ×
                                </TextBlock>
                                <TextBlock
                                    Margin="1,0"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    Text="{Binding ViewModel.SelectOperation.ImageMat.Rows}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Expander>

                <Image
                    Width="300"
                    Height="150"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Effect="{StaticResource EffectShadow3}"
                    Source="{Binding ViewModel.HistImageSource}"/>

                <Expander
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ExpandDirection="Right"
                    IsExpanded="False">
                    <Expander.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </TextBlock.LayoutTransform>
                                作
                            </TextBlock>
                            <TextBlock>
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </TextBlock.LayoutTransform>
                                操
                            </TextBlock>
                            <TextBlock>
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </TextBlock.LayoutTransform>
                                像
                            </TextBlock>
                            <TextBlock>
                                <TextBlock.LayoutTransform>
                                    <RotateTransform Angle="90"/>
                                </TextBlock.LayoutTransform>
                                图
                            </TextBlock>
                        </StackPanel>
                    </Expander.Header>

                    <Border
                        Padding="4"
                        Effect="{StaticResource EffectShadow3}"
                        Style="{StaticResource BorderRegion}">
                        <StackPanel HorizontalAlignment="Left"
                                    VerticalAlignment="Center">
                            <ToggleButton Unchecked="ClearCanvas"
                                          Checked="DrawBoundingRectCanvas"
                                          Content="绘制轮廓矩形"
                                          Style="{StaticResource ToggleButtonSwitch}"/>
                        </StackPanel>
                    </Border>
                </Expander>
            </Grid>
        </Border>

        <Border
            Grid.Row="2"
            Margin="3,1,3,1"
            Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource BorderRegion}">
            <ListBox
                d:ItemsSource="{d:SampleData ItemCount=5}"
                ItemsSource="{Binding ViewModel.OperationsCollection}"
                SelectedItem="{Binding ViewModel.SelectOperation}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Image
                                Width="200"
                                Height="100"
                                Source="{Binding BitmapSource}"/>
                            <TextBlock
                                Width="200"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="{Binding DisplayName}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background"
                                Value="Transparent"/>
                        <Setter Property="BorderThickness"
                                Value="0"/>
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch"/>
                        <Setter Property="VerticalAlignment"
                                Value="Stretch"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected"
                                     Value="True">
                                <Setter Property="Background"
                                        Value="#FFD6E4FF"/>
                                <Setter Property="BorderBrush"
                                        Value="#FF2E62A3"/>
                                <Setter Property="BorderThickness"
                                        Value="2"/>
                                <Setter Property="Foreground"
                                        Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Command="{Binding ViewModel.DeleteOperationCommand}"
                                  Header="删除选中"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
            </ListBox>
        </Border>
    </Grid>
</UserControl>
