<UserControl
    x:Class="OpenCVLab.View.Dialog.PiecewiseLinearGrayTransformDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:OpenCVLab.View.Dialog"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://Yu-UI.com//2024/xaml"
    d:DataContext="{d:DesignInstance local:PiecewiseLinearGrayTransformDialog, IsDesignTimeCreatable=False}"
    d:DesignHeight="280"
    d:DesignWidth="560"
    mc:Ignorable="d">

    <Border Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource BorderRegion}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ui:Title MainTitle="分段线性灰度变换"
                    SubTitle="Piecewise Linear Gray Transform"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="15"
                        Orientation="Vertical">
                    <TextBlock Margin="0,0,0,6"
                            Opacity="0.8">
                        固定端点 (0,0) 与 (255,255)，设置两段拐点 (r1,s1)、(r2,s2)。
                    </TextBlock>

                    <StackPanel Margin="0,4"
                            Orientation="Horizontal">
                        <TextBlock Width="120"
                                VerticalAlignment="Center">r1</TextBlock>
                        <hc:NumericUpDown Width="120"
                                Minimum="0"
                                Maximum="255"
                                          Value="{Binding R1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Margin="12,0,0,0"
                                Width="60"
                                VerticalAlignment="Center">s1</TextBlock>
                        <hc:NumericUpDown Width="120"
                                Minimum="0"
                                Maximum="255"
                                          Value="{Binding S1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Margin="0,4"
                            Orientation="Horizontal">
                        <TextBlock Width="120"
                                VerticalAlignment="Center">r2</TextBlock>
                        <hc:NumericUpDown Width="120"
                                Minimum="0"
                                Maximum="255"
                                          Value="{Binding R2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Margin="12,0,0,0"
                                Width="60"
                                VerticalAlignment="Center">s2</TextBlock>
                        <hc:NumericUpDown Width="120"
                                Minimum="0"
                                Maximum="255"
                                          Value="{Binding S2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <TextBlock Margin="0,8,0,0"
                            Opacity="0.75">
                        建议：0 ≤ r1 &lt; r2 ≤ 255。
                    </TextBlock>
                </StackPanel>

                <Border Grid.Row="1"
                        Style="{StaticResource BorderRegion}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Width="200"
                                Click="Confirm">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CheckCircleOutline"/>
                                <TextBlock>确认</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Width="200"
                                Click="Cancel">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloseCircleOutline"/>
                                <TextBlock>取消</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
