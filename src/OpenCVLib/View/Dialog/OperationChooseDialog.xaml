<UserControl
    x:Class="OpenCVLab.View.Dialog.OperationChooseDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:OpenCVLab.View.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://Yu-UI.com//2024/xaml"
    d:DataContext="{d:DesignInstance local:OperationChooseDialog,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource OpenCVLabDialogRootBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ui:Title MainTitle="操作选择"
                      SubTitle="Operation Choose"/>

            <Button
                Margin="4"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="Cancel">
                <StackPanel Orientation="Horizontal">
                    <ui:Icon Kind="Close"/>
                    <TextBlock>关闭</TextBlock>
                </StackPanel>
            </Button>

            <Border
                Grid.Row="1"
                Margin="10"
                Effect="{StaticResource EffectShadow3}"
                Style="{StaticResource BorderRegion}">
                <ListBox
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemsSource="{Binding OperationsCollection}"
                    MouseDoubleClick="ListBox_MouseDoubleClick"
                    SelectedItem="{Binding SelectOperation}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <Image
                                    Width="200"
                                    Height="100"
                                    Source="{Binding BitmapSource}"/>
                                <TextBlock
                                    Width="200"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Text="{Binding DisplayName}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="NoWrap"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter Property="BorderThickness"
                                    Value="0"/>
                            <Setter Property="HorizontalAlignment"
                                    Value="Stretch"/>
                            <Setter Property="VerticalAlignment"
                                    Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="{StaticResource OpenCVLab.Brush.Accent.Light}"/>
                                    <Setter Property="BorderBrush"
                                            Value="{StaticResource OpenCVLab.Brush.Accent}"/>
                                    <Setter Property="BorderThickness"
                                            Value="2"/>
                                    <Setter Property="Foreground"
                                            Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>
        </Grid>
    </Border>
</UserControl>
