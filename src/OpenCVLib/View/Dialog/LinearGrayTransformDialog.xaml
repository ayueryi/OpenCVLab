<UserControl
    x:Class="OpenCVLab.View.Dialog.LinearGrayTransformDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:OpenCVLab.View.Dialog"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://Yu-UI.com//2024/xaml"
    d:DataContext="{d:DesignInstance local:LinearGrayTransformDialog, IsDesignTimeCreatable=False}"
    d:DesignHeight="210"
    d:DesignWidth="560"
    mc:Ignorable="d">

    <Border Effect="{StaticResource EffectShadow3}"
            Style="{StaticResource BorderRegion}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ui:Title MainTitle="灰度线性变换"
                    SubTitle="Linear Gray Transform"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="15"
                        Orientation="Vertical">
                    <TextBlock Margin="0,0,0,6"
                            Opacity="0.8">
                        将原图灰度动态范围按线性关系拉伸到指定输出范围。
                    </TextBlock>

                    <StackPanel Margin="0,4"
                            Orientation="Horizontal">
                        <TextBlock Width="140"
                                VerticalAlignment="Center">输出最小灰度</TextBlock>
                        <hc:NumericUpDown Width="200"
                                          Minimum="0"
                                          Maximum="255"
                                          Value="{Binding OutMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Margin="0,4"
                            Orientation="Horizontal">
                        <TextBlock Width="140"
                                VerticalAlignment="Center">输出最大灰度</TextBlock>
                        <hc:NumericUpDown Width="200"
                                          Minimum="0"
                                          Maximum="255"
                                          Value="{Binding OutMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="1"
                        Style="{StaticResource BorderRegion}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Width="200"
                                Click="Confirm">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CheckCircleOutline"/>
                                <TextBlock>确认</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1"
                                Width="200"
                                Click="Cancel">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloseCircleOutline"/>
                                <TextBlock>取消</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
