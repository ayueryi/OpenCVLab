<Application
    x:Class="OpenCVLab.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:OpenCVLab"
    Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/OpenCVLabTheme.xaml"/>
                <ResourceDictionary Source="Themes/EnhancedStyles.xaml"/>
                <ResourceDictionary Source="Themes/ResponsiveStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
