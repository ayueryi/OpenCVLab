<UserControl
    x:Class="Yu.UI.Controls.ContentDialog.TipDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yu.UI.Controls.ContentDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:TipDialog,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <Border Width="320"
            MinHeight="170"
            Padding="14"
            Background="White"
            BorderBrush="#14000000"
            BorderThickness="1"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{Binding TipTitle}"
                       FontSize="15"
                       FontWeight="SemiBold"
                       Foreground="#FF222222"/>

            <TextBlock Grid.Row="1"
                       Margin="0,10,0,0"
                       TextWrapping="Wrap"
                       Text="{Binding TipContent}"
                       Foreground="#FF333333"/>

            <UniformGrid Grid.Row="2"
                         Margin="0,14,0,0"
                         Columns="2">
                <Button Padding="14,8"
                        Click="Confirm_Click">
                    <TextBlock Text="{Binding ConfirmText}"
                            HorizontalAlignment="Center"/>
                </Button>
                <Button Padding="14,8"
                        Click="Cancel_Click">
                    <TextBlock Text="{Binding CancelText}"
                            HorizontalAlignment="Center"/>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
