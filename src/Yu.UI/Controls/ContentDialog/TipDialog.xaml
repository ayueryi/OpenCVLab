<UserControl
    x:Class="Yu.UI.Controls.ContentDialog.TipDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yu.UI.Controls.ContentDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Width="300"
    Height="200"
    d:DataContext="{d:DesignInstance local:TipDialog,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <md:BundledTheme
                    BaseTheme="Light"
                    PrimaryColor="DeepPurple"
                    SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Margin="0,10,0,0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="{Binding TipTitle}"
            FontSize="14"
            FontWeight="Bold" />
        <Label
            Grid.Row="1"
            Margin="0,20,0,0"
            HorizontalContentAlignment="Center"
            Content="{Binding TipContent}"
            FontSize="14" />
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="16,16,16,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{x:Static md:DialogHost.CloseDialogCommand}"
                CommandParameter="Success"
                Content="{Binding ConfirmText}"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
            <Button
                Margin="16,16,16,0"
                HorizontalAlignment="Center"
                Command="{x:Static md:DialogHost.CloseDialogCommand}"
                CommandParameter="Cancel"
                Content="{Binding CancelText}"
                IsCancel="True"
                IsDefault="True"
                Style="{DynamicResource MaterialDesignOutlinedButton}" />
        </StackPanel>
    </Grid>
</UserControl>
